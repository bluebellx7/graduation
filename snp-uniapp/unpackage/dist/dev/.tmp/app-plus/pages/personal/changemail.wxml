<view class="container"><cu-custom vue-id="1" bgColor="bg-gradual-blue" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">修改邮箱</view></cu-custom><form><view class="cu-form-group"><view class="title">原邮箱</view><input placeholder="请输入邮箱" name="input" disabled="true" data-event-opts="{{[['input',[['__set_model',['','mail','$event',[]]]]]]}}" value="{{mail}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['getCaptcha',['$event']]]]]}}" hidden="{{!(captchaFlag)}}" class="cu-btn bg-blue" bindtap="__e">{{captchaName}}</button><button hidden="{{!(!captchaFlag)}}" class="cu-btn bg-grey" disabled>{{captchaTime+"秒后重新获取"}}</button></view><view class="cu-form-group"><view class="title">验证码</view><input placeholder="请输入邮箱中的验证码" name="captcha" maxlength="6" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/></view><view class="padding flex flex-direction margin-top"><button class="cu-btn bg-blue lg" data-target="Modal" data-event-opts="{{[['tap',[['next',['$event']]]]]}}" bindtap="__e">下一步</button></view></form></view>