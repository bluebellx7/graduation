<view class="container"><cu-custom vue-id="1" bgColor="bg-gradual-blue" isBack="{{true}}" bind:__l="__l" vue-slots="{{['backText','content']}}"><view slot="backText">返回</view><view slot="content">个人信息</view></cu-custom><form><view class="cu-form-group margin-top"><view class="title">昵称</view><input placeholder="请输入用户名" name="input" data-event-opts="{{[['input',[['__set_model',['','userName','$event',[]]]]]]}}" value="{{userName}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">简介</view><input placeholder="请输入您的介绍" name="input" data-event-opts="{{[['input',[['__set_model',['','synopsis','$event',[]]]]]]}}" value="{{synopsis}}" bindinput="__e"/></view><view class="cu-form-group"><view class="title">性别</view><picker value="{{index}}" range="{{sex}}" data-event-opts="{{[['change',[['sexChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{''+(index>-1?sex[index]:'选择性别')+''}}</view></picker></view><view class="cu-form-group"><view class="title">生日</view><picker mode="date" value="{{date}}" start="1900-01-01" end="2020-01-01" data-event-opts="{{[['change',[['DateChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{''+birthday+''}}</view></picker></view><view class="cu-form-group"><view class="title">手机</view><input placeholder="请输入手机号" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','telephone','$event',[]]]]]]}}" value="{{telephone}}" bindinput="__e"/><view class="cu-capsule radius"><view class="cu-tag bg-blue ">+86</view><view class="cu-tag line-blue">中国大陆</view></view></view><view class="cu-form-group"><view class="title">邮箱</view><input placeholder="请设置邮箱" name="input" disabled="true" data-event-opts="{{[['input',[['__set_model',['','mail','$event',[]]]]]]}}" value="{{mail}}" bindinput="__e"/><button data-event-opts="{{[['tap',[['changemail',['$event']]]]]}}" class="cu-btn bg-blue" bindtap="__e">{{captchaName}}</button></view><view class="padding flex flex-direction margin-top"><button class="cu-btn bg-blue lg" data-target="Modal" data-event-opts="{{[['tap',[['change',['$event']]]]]}}" bindtap="__e">确认修改</button></view></form></view>